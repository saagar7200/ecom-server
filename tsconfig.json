{
  "compilerOptions": {
    "target": "ES2016",                                 
    "module": "NodeNext",                              
    "rootDir": "./src",                                 
    "outDir": "./build",                                  
    "noEmit": false,                                 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "strictNullChecks": false,                     
    "alwaysStrict": true,                             
    "noUnusedLocals": true,                           
     "allowUnusedLabels": true,   
                        
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules","build"],

}
